---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Tarifs - Yoga Studio">
  <!-- Hero section avec image de fond -->
  <div class="relative h-[40vh] min-h-[400px]">
    <div class="absolute inset-0">
      <img
        src="/images/tarifs-bg.jpg"
        alt="Salle de yoga"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative h-full flex items-center justify-center">
      <h1 class="text-4xl md:text-5xl text-white font-playfair text-center">
        Nos tarifs
      </h1>
    </div>
  </div>

  <main class="py-12">
    <div class="container-custom">
      <!-- Cartes des tarifs -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Carte unique -->
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <h2 class="font-playfair text-2xl mb-4">Cours à l'unité</h2>
          <div class="text-4xl font-bold text-ochre mb-6">20€</div>
          <ul class="space-y-4 mb-8">
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Cours de 1h30
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Tous niveaux
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Matériel fourni
            </li>
          </ul>
          <a href="/contact" class="btn-primary block w-full">Réserver</a>
        </div>

        <!-- Carte 10 cours -->
        <div class="bg-white rounded-lg shadow-md p-8 text-center border-2 border-ochre">
          <div class="absolute top-0 right-0 bg-ochre text-white px-4 py-1 rounded-bl-lg">
            Populaire
          </div>
          <h2 class="font-playfair text-2xl mb-4">Carnet 10 cours</h2>
          <div class="text-4xl font-bold text-ochre mb-6">180€</div>
          <ul class="space-y-4 mb-8">
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              10 cours de 1h30
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Valable 6 mois
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Matériel fourni
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              -10% sur le prix unitaire
            </li>
          </ul>
          <a href="/contact" class="btn-primary block w-full">Réserver</a>
        </div>

        <!-- Carte illimité -->
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <h2 class="font-playfair text-2xl mb-4">Abonnement mensuel</h2>
          <div class="text-4xl font-bold text-ochre mb-6">120€</div>
          <ul class="space-y-4 mb-8">
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Cours illimités
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Tous les cours
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Matériel fourni
            </li>
            <li class="flex items-center justify-center">
              <svg class="w-5 h-5 text-ochre mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Réservation prioritaire
            </li>
          </ul>
          <a href="/contact" class="btn-primary block w-full">Réserver</a>
        </div>
      </div>

      <!-- Informations supplémentaires -->
      <div class="mt-16 grid md:grid-cols-2 gap-8">
        <!-- Conditions -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="font-playfair text-2xl mb-6">Conditions</h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Premier cours d'essai à 15€</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Réservation obligatoire 24h à l'avance</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Annulation possible jusqu'à 24h avant le cours</span>
            </li>
          </ul>
        </div>

        <!-- Paiement -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="font-playfair text-2xl mb-6">Modes de paiement</h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Carte bancaire</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Espèces</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Chèque</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .btn-primary {
    @apply bg-ochre hover:bg-terracotta text-white py-3 px-6 rounded-md transition-colors;
  }
</style> 
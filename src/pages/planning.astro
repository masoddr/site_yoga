---
import BaseLayout from '../layouts/BaseLayout.astro';

// Données des cours (à remplacer par des données dynamiques plus tard)
const cours = [
  { jour: "Lundi", horaires: [
    { heure: "9h00", type: "Hatha Yoga", niveau: "Tous niveaux" },
    { heure: "12h00", type: "Yoga Flow", niveau: "Intermédiaire" },
    { heure: "18h30", type: "Yin Yoga", niveau: "Tous niveaux" }
  ]},
  { jour: "Mardi", horaires: [
    { heure: "9h00", type: "Vinyasa", niveau: "Intermédiaire" },
    { heure: "12h00", type: "Hatha Yoga", niveau: "Débutant" },
    { heure: "19h00", type: "Yoga Flow", niveau: "Tous niveaux" }
  ]},
  { jour: "Mercredi", horaires: [
    { heure: "9h00", type: "Yin Yoga", niveau: "Tous niveaux" },
    { heure: "12h00", type: "Vinyasa", niveau: "Avancé" },
    { heure: "18h30", type: "Hatha Yoga", niveau: "Tous niveaux" }
  ]},
  { jour: "Jeudi", horaires: [
    { heure: "9h00", type: "Yoga Flow", niveau: "Tous niveaux" },
    { heure: "12h00", type: "Hatha Yoga", niveau: "Intermédiaire" },
    { heure: "19h00", type: "Vinyasa", niveau: "Tous niveaux" }
  ]},
  { jour: "Vendredi", horaires: [
    { heure: "9h00", type: "Hatha Yoga", niveau: "Tous niveaux" },
    { heure: "12h00", type: "Yin Yoga", niveau: "Débutant" },
    { heure: "18h30", type: "Yoga Flow", niveau: "Avancé" }
  ]},
  { jour: "Samedi", horaires: [
    { heure: "9h30", type: "Vinyasa", niveau: "Tous niveaux" },
    { heure: "11h00", type: "Hatha Yoga", niveau: "Tous niveaux" }
  ]}
];
---

<BaseLayout title="Planning - Yoga Studio">
  <!-- Hero section avec image de fond -->
  <div class="relative h-[40vh] min-h-[400px]">
    <div class="absolute inset-0">
      <img
        src="/images/planning-bg.jpg"
        alt="Salle de yoga"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative h-full flex items-center justify-center">
      <h1 class="text-4xl md:text-5xl text-white font-playfair text-center">
        Planning des cours
      </h1>
    </div>
  </div>

  <main class="py-12">
    <div class="container-custom">
      <!-- Filtres -->
      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <button class="btn-primary">Tous les cours</button>
        <button class="btn-secondary">Yoga Vinyasa</button>
        <button class="btn-secondary">Yoga Hatha</button>
        <button class="btn-secondary">Méditation</button>
      </div>

      <!-- Planning -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Lundi -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="font-playfair text-2xl mb-4">Lundi</h2>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">9h00 - 10h30</p>
              <h3 class="text-lg font-medium">Yoga Vinyasa</h3>
              <p class="text-gray-600">Niveau débutant</p>
            </div>
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">18h00 - 19h30</p>
              <h3 class="text-lg font-medium">Yoga Hatha</h3>
              <p class="text-gray-600">Tous niveaux</p>
            </div>
          </div>
        </div>

        <!-- Mardi -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="font-playfair text-2xl mb-4">Mardi</h2>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">10h00 - 11h30</p>
              <h3 class="text-lg font-medium">Méditation</h3>
              <p class="text-gray-600">Tous niveaux</p>
            </div>
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">19h00 - 20h30</p>
              <h3 class="text-lg font-medium">Yoga Vinyasa</h3>
              <p class="text-gray-600">Niveau intermédiaire</p>
            </div>
          </div>
        </div>

        <!-- Mercredi -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="font-playfair text-2xl mb-4">Mercredi</h2>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">9h00 - 10h30</p>
              <h3 class="text-lg font-medium">Yoga Hatha</h3>
              <p class="text-gray-600">Tous niveaux</p>
            </div>
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">18h00 - 19h30</p>
              <h3 class="text-lg font-medium">Yoga Vinyasa</h3>
              <p class="text-gray-600">Niveau avancé</p>
            </div>
          </div>
        </div>

        <!-- Jeudi -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="font-playfair text-2xl mb-4">Jeudi</h2>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">10h00 - 11h30</p>
              <h3 class="text-lg font-medium">Méditation</h3>
              <p class="text-gray-600">Tous niveaux</p>
            </div>
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">19h00 - 20h30</p>
              <h3 class="text-lg font-medium">Yoga Hatha</h3>
              <p class="text-gray-600">Niveau débutant</p>
            </div>
          </div>
        </div>

        <!-- Vendredi -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="font-playfair text-2xl mb-4">Vendredi</h2>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">9h00 - 10h30</p>
              <h3 class="text-lg font-medium">Yoga Vinyasa</h3>
              <p class="text-gray-600">Tous niveaux</p>
            </div>
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">18h00 - 19h30</p>
              <h3 class="text-lg font-medium">Méditation</h3>
              <p class="text-gray-600">Niveau intermédiaire</p>
            </div>
          </div>
        </div>

        <!-- Samedi -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="font-playfair text-2xl mb-4">Samedi</h2>
          <div class="space-y-4">
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">10h00 - 11h30</p>
              <h3 class="text-lg font-medium">Yoga Hatha</h3>
              <p class="text-gray-600">Tous niveaux</p>
            </div>
            <div class="border-b pb-4">
              <p class="text-ochre font-medium">14h00 - 15h30</p>
              <h3 class="text-lg font-medium">Yoga Vinyasa</h3>
              <p class="text-gray-600">Niveau débutant</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Note -->
      <div class="mt-12 text-center text-gray-600">
        <p class="mb-4">Les cours sont limités à 15 participants maximum.</p>
        <p>Réservation obligatoire 24h à l'avance.</p>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .btn-primary {
    @apply bg-ochre hover:bg-terracotta text-white py-2 px-6 rounded-md transition-colors;
  }

  .btn-secondary {
    @apply border-2 border-ochre text-ochre hover:bg-ochre hover:text-white py-2 px-6 rounded-md transition-colors;
  }
</style> 
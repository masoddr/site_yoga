---
import BaseLayout from '../layouts/BaseLayout.astro';
import Map from '../components/Map.astro';
---

<BaseLayout title="Contact - Yoga Studio">
  <!-- Hero section avec image de fond -->
  <div class="relative h-[40vh] min-h-[400px]">
    <div class="absolute inset-0">
      <img
        src="/images/contact-bg.jpg"
        alt="Salle de yoga"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative h-full flex items-center justify-center">
      <h1 class="text-4xl md:text-5xl text-white font-playfair text-center">
        Contactez-nous
      </h1>
    </div>
  </div>

  <main class="py-12">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Formulaire de contact -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <h2 class="font-playfair text-2xl mb-6">Envoyez-nous un message</h2>
          <form class="space-y-6">
            <div>
              <label for="nom" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
              <input
                type="text"
                id="nom"
                name="nom"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-ochre focus:border-ochre"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-ochre focus:border-ochre"
                required
              />
            </div>
            <div>
              <label for="telephone" class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
              <input
                type="tel"
                id="telephone"
                name="telephone"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-ochre focus:border-ochre"
              />
            </div>
            <div>
              <label for="sujet" class="block text-sm font-medium text-gray-700 mb-1">Sujet</label>
              <select
                id="sujet"
                name="sujet"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-ochre focus:border-ochre"
                required
              >
                <option value="">Sélectionnez un sujet</option>
                <option value="inscription">Inscription aux cours</option>
                <option value="renseignements">Demande de renseignements</option>
                <option value="autre">Autre</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-ochre focus:border-ochre"
                required
              ></textarea>
            </div>
            <button type="submit" class="btn-primary w-full">
              Envoyer le message
            </button>
          </form>
        </div>

        <!-- Informations de contact -->
        <div class="space-y-8">
          <!-- Coordonnées -->
          <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="font-playfair text-2xl mb-6">Nos coordonnées</h2>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <h3 class="font-medium">Adresse</h3>
                  <p class="text-gray-600">16 Rue Joseph Lakanal<br />31000 Toulouse</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <h3 class="font-medium">Téléphone</h3>
                  <p class="text-gray-600">05 XX XX XX XX</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-ochre mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <h3 class="font-medium">Email</h3>
                  <p class="text-gray-600">contact@yogastudio.fr</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Horaires -->
          <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="font-playfair text-2xl mb-6">Horaires d'ouverture</h2>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-gray-600">Lundi - Vendredi</span>
                <span class="font-medium">8h30 - 20h30</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Samedi</span>
                <span class="font-medium">9h00 - 17h00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Dimanche</span>
                <span class="font-medium">Fermé</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Carte -->
      <div class="mt-12">
        <h2 class="font-playfair text-2xl mb-6">Notre localisation</h2>
        <Map />
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .btn-primary {
    @apply bg-ochre hover:bg-terracotta text-white py-3 px-6 rounded-md transition-colors;
  }
</style> 